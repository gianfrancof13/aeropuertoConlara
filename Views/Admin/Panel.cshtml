@{
    ViewData["Title"] = "Panel de administración";
}

<div class="banner">
    <h1>@ViewData["Title"]</h1>
    <p>Bienvenido al panel de administración.</p>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card" style="border-radius: 15px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                <div class="card-body">
                    <h5 class="card-title" style="color: #1a237e; font-weight: 600;">
                        <i class="fas fa-user-circle me-2"></i>Información del Usuario
                    </h5>
                    <div class="mt-3">
                        <p class="mb-2"><strong>Usuario:</strong> @User.Identity.Name</p>
                        <p class="mb-2"><strong>Rol:</strong> @User.Claims.FirstOrDefault(c => c.Type ==
                            System.Security.Claims.ClaimTypes.Role)?.Value</p>
                        <p class="mb-2"><strong>Último acceso:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card" style="border-radius: 15px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                <div class="card-body">
                    <h5 class="card-title" style="color: #1a237e; font-weight: 600;">
                        <i class="fas fa-cogs me-2"></i>Acciones Disponibles
                    </h5>
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a href="/Vuelos" class="btn btn-primary"
                                    style="background: linear-gradient(90deg, #1a237e 0%, #283593 100%); border: none; padding: 1rem; border-radius: 10px; font-weight: 500;">
                                    <i class="fas fa-plane me-2"></i>Gestionar Vuelos
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a href="/Admin/CreateUser" class="btn btn-primary"
                                    style="background: linear-gradient(90deg, #1a237e 0%, #283593 100%); border: none; padding: 1rem; border-radius: 10px; font-weight: 500;">
                                    <i class="fas fa-user-plus me-2"></i>Crear Usuario
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
}