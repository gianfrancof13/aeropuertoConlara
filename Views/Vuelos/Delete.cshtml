@model AeropuertoConlara.Models.Vuelo
@{
    ViewData["Title"] = "Eliminar vuelo";
}
<div class="banner" style="margin-bottom: 2rem;">
    <h1 class="mb-4">@ViewData["Title"]</h1>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="vuelos-table-section" style="max-width: 600px; margin: 0 auto;">
                <div class="novedad-card" style="box-shadow:none;">
                    <div class="novedad-content">
                        <h3 class="mb-3 text-danger">¿Estás seguro que deseas eliminar este vuelo?</h3>
                        <div class="mb-2"><strong>Número de vuelo:</strong> @Model.NumeroVuelo</div>
                        <div class="mb-2"><strong>Ruta:</strong> @Model.Ruta</div>
                        <div class="mb-2"><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")</div>
                        <div class="mb-2"><strong>Hora de Arribo:</strong> @Model.HoraArribo.ToString(@"hh\:mm")</div>
                        <div class="mb-2"><strong>Hora de Partida:</strong> @Model.HoraPartida.ToString(@"hh\:mm")</div>
                        <div class="mb-2"><strong>Equipo:</strong> @Model.Equipo</div>
                        <div class="mb-2"><strong>TA:</strong> @Model.TA</div>
                    </div>
                </div>
                <form asp-action="Delete" method="post" class="d-flex justify-content-end gap-2 mt-3">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>