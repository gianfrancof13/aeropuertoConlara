@model IEnumerable<AeropuertoConlara.Models.Vuelo>
@{
    ViewData["Title"] = "Listado de Vuelos";
}

<div class="banner" style="margin-bottom: 2rem;">
    <h1 class="mb-4">@ViewData["Title"]</h1>
</div>

<div class="container-fluid">
    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-primary" asp-action="Create">Crear nuevo vuelo</a>
    </div>
    <div class="vuelos-table-section">
        <table class="table table-hover shadow-sm rounded overflow-hidden" style="margin: 0 auto;">
            <thead class="table-light">
                <tr>
                    <th class="fw-bold text-primary">Aerolínea</th>
                    <th class="fw-bold text-primary">Número</th>
                    <th class="fw-bold text-primary">Destino</th>
                    <th class="fw-bold text-primary">Fecha/Hora</th>
                    <th class="fw-bold text-primary">Estado</th>
                    <th class="fw-bold text-primary">Última actualización</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <td class="fw-semibold">@item.Aerolinea</td>
                        <td>@item.NumeroVuelo</td>
                        <td>@item.Destino</td>
                        <td>@item.FechaHora.ToString("g")</td>
                        <td>
                            <span class="badge rounded-pill bg-info text-dark">@item.Estado</span>
                        </td>
                        <td><small class="text-muted">@item.UltimaActualizacion.ToString("g")</small></td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>