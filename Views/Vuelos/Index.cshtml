@model IEnumerable<AeropuertoConlara.Models.Vuelo>
@{
    ViewData["Title"] = "Gesti√≥n de Vuelos";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Crear Nuevo Vuelo
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                            <th>@Html.DisplayNameFor(model => model.NumeroVuelo)</th>
                            <th>@Html.DisplayNameFor(model => model.HoraArribo)</th>
                            <th>@Html.DisplayNameFor(model => model.HoraPartida)</th>
                            <th>@Html.DisplayNameFor(model => model.Ruta)</th>
                            <th>@Html.DisplayNameFor(model => model.Equipo)</th>
                            <th>@Html.DisplayNameFor(model => model.TA)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>@item.NumeroVuelo</td>
                                <td>@item.HoraArribo.ToString(@"hh\:mm")</td>
                                <td>@item.HoraPartida.ToString(@"hh\:mm")</td>
                                <td>@item.Ruta</td>
                                <td>@item.Equipo</td>
                                <td>@item.TA</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>