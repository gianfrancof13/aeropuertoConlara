@model AeropuertoConlara.Models.Vuelo
@{
    ViewData["Title"] = "Crear vuelo";
}
<h1 class="mb-4">@ViewData["Title"]</h1>
<div class="vuelos-table-section" style="max-width: 600px; margin: 0 auto;">
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Aerolinea" class="form-label"></label>
            <input asp-for="Aerolinea" class="form-control" placeholder="Ej: AerolÃ­neas Argentinas" />
            <span asp-validation-for="Aerolinea" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NumeroVuelo" class="form-label"></label>
            <input asp-for="NumeroVuelo" class="form-control" placeholder="Ej: AR1234" />
            <span asp-validation-for="NumeroVuelo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Destino" class="form-label"></label>
            <input asp-for="Destino" class="form-control" placeholder="Ej: Buenos Aires" />
            <span asp-validation-for="Destino" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FechaHora" class="form-label"></label>
            <input asp-for="FechaHora" class="form-control" type="datetime-local" />
            <span asp-validation-for="FechaHora" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Estado" class="form-label"></label>
            <input asp-for="Estado" class="form-control" placeholder="Ej: En horario, Demorado, Aterrizado" />
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form>
</div>
@section Scripts {
            <partial name="_ValidationScriptsPartial" />
}