@{
    ViewData["Title"] = "Contactos del Aeropuerto";
}

<div class="banner">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="contactos-container">
    <section class="contactos-section">
        <h2>Internos del Aeropuerto Valle del Conlara</h2>
        <div class="contactos-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; margin: 0 2rem;">
            <div style="display: flex; flex-direction: column; gap: 1rem;">
                <div class="contacto-card">
                    <div class="contacto-info">
                        <h3>Administración</h3>
                        <p class="numero">4106</p>
                    </div>
                </div>
                <div class="contacto-card">
                    <div class="contacto-info">
                        <h3>Jefatura</h3>
                        <p class="numero">4122</p>
                    </div>
                </div>
                <div class="contacto-card">
                    <div class="contacto-info">
                        <h3>Plan de Vuelo</h3>
                        <p class="numero">4969</p>
                    </div>
                </div>
                <div class="contacto-card">
                    <div class="contacto-info">
                        <h3>Seguridad</h3>
                        <p class="numero">4147</p>
                    </div>
                </div>
            </div>
            <div style="display: flex; flex-direction: column; gap: 1rem;">
                <div class="contacto-card">
                    <div class="contacto-info">
                        <h3>CIV Conlara</h3>
                        <p class="numero">6346</p>
                    </div>
                </div>
                <div class="contacto-card">
                    <div class="contacto-info">
                        <h3>Sanidad</h3>
                        <p class="numero">5654</p>
                    </div>
                </div>
                <div class="contacto-card">
                    <div class="contacto-info">
                        <h3>Bomberos</h3>
                        <p class="numero">4155</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="contactos-section">
        <h2 class="section-title">Otros Internos</h2>
        <div class="contactos-grid">
            <div class="contacto-card">
                <div class="contacto-info">
                    <h3>Administración EDA San Luis</h3>
                    <p class="numero">5586</p>
                </div>
            </div>
            <div class="contacto-card">
                <div class="contacto-info">
                    <h3>Centro de Instrucción de Vuelo</h3>
                    <p class="numero">3178</p>
                </div>
            </div>
        </div>
    </section>
</div>